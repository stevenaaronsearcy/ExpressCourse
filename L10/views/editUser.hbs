<script type="application/javascript">
  var deleteUser = function (id) {
    fetch("/users/admin/editUser/" + id, {
      method: "DELETE"
    }).then(result => window.location = "/users/admin");
  }
</script>

<div class="d-flex justify-content-center">
  <div class="col-4">
    <div class="card text-center">
      <div class="card-body">
        <h3 class="card-title">Hello, {{user.FirstName}} {{user.LastName}}!</h3>
        <hr>
        <p class="card-text">
        <h5>Email: {{user.Email}}</h5>
        <h5>UserId: {{user.UserId}}</h5>
        <h5>Username: {{user.UserName}}</h5>
        </p>
      </div>
    </div>
  </div>
</div>

<button onClick="deleteUser({{user.UserId}})" class="btn btn-primary">Delete</button>